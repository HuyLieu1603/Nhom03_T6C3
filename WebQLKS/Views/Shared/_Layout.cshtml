    <script>
        function initMap() {
            // Tọa độ để trung tâm bản đồ
            var myLatLng = { lat: 10.776101071657394, lng: 106.66735983035177 };

            // Tạo bản đồ và đặt tọa độ
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 19,
                center: myLatLng
            });

            // Tạo một marker và đặt nó lên bản đồ
            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Huflit'
            });
        }


        document.addEventListener("DOMContentLoaded", function () {
            let locationBar = document.querySelector('.location');
            let lastScrollTop = 0;

            window.addEventListener('scroll', function () {
                let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

                if (currentScroll > lastScrollTop) {
                    // Scrolling down
                    locationBar.classList.add('hidden');
                } else {
                    // Scrolling up
                    locationBar.classList.remove('hidden');
                }
                lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // Prevent negative scroll
            });
        });

    </script>
